<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp9"
    >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/popup_share_style"
            >

                <TextView
                    android:id="@+id/item_popupwindows_qq"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="分享到QQ好友"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="15sp" />
                <include layout="@layout/public_horizontal_gray_line"></include>


                <TextView
                    android:id="@+id/item_popupwindows_qqzone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="分享到QQ空间"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="15sp" />
            <include layout="@layout/public_horizontal_gray_line"></include>

            <TextView
                android:id="@+id/item_popupwindows_weixin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="分享到微信好友"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15sp" />

            <include layout="@layout/public_horizontal_gray_line"></include>

            <TextView
                android:id="@+id/item_popupwindows_weixinzone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="分享到微信朋友圈"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp11"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/popup_share_style"
            />
    </LinearLayout>

</RelativeLayout>